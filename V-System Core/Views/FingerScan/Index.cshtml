
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Iframe.cshtml";
}

<div class="container py-5">
    <!-- Page Title -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Fingerprint Scan</h2>
        <p class="text-muted">Please place your finger on the scanner.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Fingerprint Scan Card -->
            <div class="card shadow-lg rounded-3">
                <div class="card-body text-center">
                    <!-- Fingerprint Image Preview -->
                    <div id="fingerprintPreview" class="border border-2 rounded-3 p-3 bg-white d-flex justify-content-center align-items-center" style="height: 200px;">
                        <img src=" " id="scanImage" class="img-fluid" alt="Fingerprint Preview">
                    </div>

                    <!-- Scan Button -->
                    <button id="scanButton" class="btn btn-primary mt-3 px-4">
                        <i class="bi bi-fingerprint"></i> Start Scan
                    </button>

                    <!-- Scan Status -->
                    <div class="mt-3">
                        <p id="scanStatus" class="text-muted">Waiting for scan...</p>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="~/js/FingerScan.js"></script>
