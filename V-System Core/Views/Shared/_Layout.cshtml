<script>
    const _roleName = '@roleName'; 
    InitializeLayout(_roleName); 
    $(document).ready(function () { 
        if (localStorage.getItem("darkMode") === "enabled") {
            enableDarkMode();
        }

        $("#darkModeToggle").click(function () {
            if ($("body").hasClass("dark-mode")) {
                disableDarkMode();
            } else {
                enableDarkMode();
            }
        }); 

        function enableDarkMode() {
            $("body").addClass("dark-mode");
            $("#sidebar").addClass("dark-sidebar");
            $("#header").addClass("dark-header");
            $(".nav-link, .nav-content a").addClass("text-light");
            $(".nav-link ").addClass("bg-");

            localStorage.setItem("darkMode", "enabled");
            $("#darkModeToggle").text("☀️");

            let iframe = document.getElementsByClassName("iframe-content");
            if (iframe) {
                iframe.onload = function () {
                    iframe.contentWindow.postMessage({ darkMode: true }, "*");
                };
            }
        }

        function disableDarkMode() {
            $("body").removeClass("dark-mode");
            $("#sidebar").removeClass("dark-sidebar");
            $("#header").removeClass("dark-header"); 
            $(".nav-link, .nav-content a").removeClass("text-light");  

            localStorage.setItem("darkMode", "disabled");
            $("#darkModeToggle").text("🌙");

            let iframe = document.getElementsByClassName("iframe-content");
            if (iframe) {
                iframe.onload = function () {
                    iframe.contentWindow.postMessage({ darkMode: false }, "*");
                };
            }
        }
    });



</script>
 
