            </ul>
        </nav>
    </header> 
    <!-- ======= Sidebar ======= --> 
    <aside id="sidebar" class="sidebar ">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                @foreach (var menu in tbl_Menus.OrderBy(m => m.level))
                {
                    var modules = tbl_Modules.Where(mod => mod.menu_id == menu.ID).OrderBy(mod => mod.level).ToList();
                    var hasModules = modules.Any();
                    <a class="nav-link collapsed fw-bolder" data-bs-target="#components-nav-@menu.ID" data-bs-toggle="collapse" href="#"  >
                        <i class="@menu.icon"></i> <span>@menu.menu_name</span> 
                        @if (hasModules)
                        {
                            <i class="bi bi-chevron-down ms-auto"></i>
                        }
                    </a>
                    <ul id="components-nav-@menu.ID" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                        @foreach (var module in modules)
                        {
                            <li>
                                <a href="#" class="module-link" onclick="addNewTab('@module.module_name', '@module.ID', '@module.module_name', '@module.icon' )">
                                    <i class="@module.icon" style="font-size:15px"></i> <span>@module.module_name</span>
                                </a>
                            </li>
                        }
                    </ul>
                }
            </li> 
            <li class="nav-item">
                <a class="nav-link collapsed text-danger" href="/Dashboard/Logout">
                    <i class="bi bi-box-arrow-in-right text-danger"></i>
                    <span>Login</span>
                </a>
            </li>
        </ul>
    </aside>

    <main id="main" class="main " style="padding:5px"> 
       
        @RenderBody()
    </main> 
    <link href="~/lib/assets/css/style.css" rel="stylesheet" />
    <link href="~/css/msgbox.css" rel="stylesheet" /> 
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>  
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
     

    <script src="~/js/SpecialFunction.js"></script>
    <script src="~/js/msgbox.js"></script> 
    @RenderSection("Scripts", false)    
 
</body>  
</html>
 
