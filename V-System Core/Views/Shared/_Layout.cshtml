<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/lib/assets/icon/system-icon.ico" type="image/x-icon" /> 
    <link href="~/css/msgbox.css" rel="stylesheet" />
    <!-- Google Fonts --> 
    <link href="~/lib/assets/vendor/bootstrap-icons/bootstrap-icons.min.css" rel="stylesheet" /> 
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/css/Layout.css" rel="stylesheet" />
    <script src="~/js/Layout.js"></script>
</head>
@{
    var tbl_Menus = ViewData["MenuData"] as List<tbl_Menus> ?? new List<tbl_Menus>();
    var tbl_Modules = ViewData["ModuleData"] as List<tbl_Modules> ?? new List<tbl_Modules>();
    var username = ViewBag.Username;
}
